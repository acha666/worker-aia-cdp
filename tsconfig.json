{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "WebWorker", "DOM", "DOM.Iterable"],
    "types": ["@cloudflare/workers-types", "node"],
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@contracts/*": ["./src/contracts/*"]
    }
  },
  "include": [
    "src/worker",
    "src/web",
    "src/contracts",
    "worker-env.d.ts",
    "tests/worker/**/*.ts",
    "tests/backend/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "build", ".wrangler", "tests/web/**"]
}
